<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="organization"
		class="com.aravinda.springConstructorDemo.Organization">
 		<constructor-arg value="BMW" name="company"></constructor-arg>
 		<constructor-arg value="1929" name="year"></constructor-arg>
 		
 		<property name="postalCode">
 			<value>123456</value>
 		</property>
 		<property name="empCount">
 			<value>12</value>
 		</property>
	</bean>
</beans>
